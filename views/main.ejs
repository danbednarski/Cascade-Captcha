<label for="modal" class="modal-background"></label>
<div class="modal">
	<div class="modal-header">
		<h3>Cascade Captcha</h3>
        <label for="modal">
        	<img src="data:image/png;base64," width="16" height="16" alt="">
        </label>
    </div>
    <div style="display: flex; justify-content: center;">
        <span style="font-size: small; font-style: italic;color:black">click until the images are upright</span>
    </div>
        <div id="modal-body">
            <% images.forEach((imageSet, setIndex) => { %>
                <div class="image-container-<%= setIndex %>">
                    <% imageSet.forEach((image, imageIndex) => { %>
                        <label for="sleepy-img-<%= setIndex %>-<%= imageIndex %>">
                            <input id="sleepy-img-<%= setIndex %>-<%= imageIndex %>" name="sleepy-img-<%= setIndex %>-<%= imageIndex %>" type="checkbox" />
                            <img src="<%= image %>" alt="bible original image" />
                        </label>
                    <% }); %>
                </div>
            <% }); %>
        </div>
        <label onclick="document.getElementById('enter-form').submit();" id="done" style="display: flex; justify-content: center; font-size: large;color:black" for="modal">
            <u>Done</u>
        </label>
</div>
<input hidden type="submit" value="Enter" />
